#include <Servo.h>  

// Define servo objects
Servo servo1;  
Servo servo2;  
Servo servo3;  
Servo servo4;  
Servo servo5;  
Servo servo6;  

void setup() {
  // Attach servo motors to digital pins on the Arduino
  servo1.attach(2);  
  servo2.attach(3); 
  servo3.attach(4);  
  servo4.attach(5);  
  servo5.attach(6);  
  servo6.attach(7); 
}

void loop() {
  // Moving all servos to 90 degrees
  servo1.write(90);  
  servo2.write(90);  
  servo3.write(90);  
  servo4.write(90);  
  servo5.write(90);  
  servo6.write(90);  
  
  delay(1000);  // Wait for 1 second
  
  // Moving all servos back to 0 degrees
  servo1.write(0);   
  servo2.write(0);   
  servo3.write(0);   
  servo4.write(0);   
  servo5.write(0);   
  servo6.write(0);  
  
  delay(1000);  // Wait for 1 second
}
